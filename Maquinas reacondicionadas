  <script>
    function filtrar(tipo) {
      const productos = document.querySelectorAll('.producto');
      productos.forEach(p => {
        if (tipo === 'todas') {
          p.classList.remove('oculto');
        } else {
          if (p.classList.contains(tipo)) {
            p.classList.remove('oculto');
          } else {
            p.classList.add('oculto');
          }
        }
      });
    }
  </script>
